{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES5",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "outDir": "./dist/es6",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "**/node_modules/@types/mocha"
  ]
}
