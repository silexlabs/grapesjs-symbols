{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES5",
    "outDir": "./dist",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true, // This is needed to avoid errors with the `@types/node` package (Found 89 errors in the same file, starting at: ../../node_modules/@types/webpack/index.d.ts:32)
    // "allowJs": true, // Necessary when importing grapesjs as it loads a .js file for i18n
    // "noImplicitAny": false,
    // "checkJs": false,
    // "allowSyntheticDefaultImports": true,
    // "forceConsistentCasingInFileNames": true,
    // "noFallthroughCasesInSwitch": true,
    // "resolveJsonModule": true,
    // "isolatedModules": true,
    // "noEmit": false,
    // "sourceMap": true,
    "lib": ["ES2020", "DOM"]
  },
  "include": [
    "src/**/*.ts"
  ]
}
